<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/base_layout_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/app_transparent">

    <com.nearor.commonui.widget.NavigationBar
        android:id="@+id/navigation_activity_navigation_view"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_navigation_bar_height"
        android:baselineAligned="false"
        android:background="@color/app_main_color" />

    <LinearLayout
        android:id="@+id/navigation_activity_content_view"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/app_transparent">
    </LinearLayout>

</LinearLayout>